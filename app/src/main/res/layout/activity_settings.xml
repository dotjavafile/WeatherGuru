<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.newfeds.weatherguru.FirstTimeRun"
    android:background="#5170fa">

    <AutoCompleteTextView
        android:imeOptions="flagNoExtractUi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/autoCompleteTextViewSettings"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:completionThreshold="2"
        android:background="#fbe991" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Your City"
        android:textSize="30sp"
        android:id="@+id/textViewChooseYourCityFirstTime"
        android:layout_above="@+id/autoCompleteTextViewSettings"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:textColor="#FFFFFF" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageViewChooseTick"
        android:src="@drawable/tick"
        android:clickable="true"
        android:layout_below="@+id/autoCompleteTextViewSettings"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />

</RelativeLayout>
